        <Grid>
            <DockPanel Grid.Row="0">
                <DockPanel.LayoutTransform>
                    <ScaleTransform CenterX="0" CenterY="0" ScaleX="{Binding InitialScaleFactor}" ScaleY="{Binding InitialScaleFactor}"/>
                </DockPanel.LayoutTransform>
