                    </GridViewColumnHeader>-->


                   
                </GridView>

            </ListView.View>
            
            
            
        </ListView>
        <Label Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" Content="* An associated terrain will need to be defined before computing." />

        <!--<Button Name="btn_OK" Content="OK" Width="50" Height="22" Margin="5" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Right" Click="btn_OK_Click"/>-->
        <Util:OKCloseControl HorizontalAlignment="Right" Grid.Row="8" Grid.Column="1" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
