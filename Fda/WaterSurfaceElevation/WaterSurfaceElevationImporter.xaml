            </Border>
        </Grid>-->
        <ListView Grid.Row="5" Name="lst_ListOfRows"  HorizontalAlignment="Stretch" Margin="3">
            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" IsChecked="{Binding IsChecked}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Text="{Binding Name}" HorizontalAlignment="Left" Margin="5"/>
                        <TextBox Grid.Column="2" Text="{Binding Probability}" HorizontalAlignment="Stretch" Margin="5"/>
                        <TextBox Grid.Column="3" HorizontalAlignment="Stretch" Margin="5" />
                </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>-->



            <ListView.View >
                <GridView AllowsColumnReorder="false"  >

                    <GridViewColumn  Header="Import" Width="50"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked}" />
                                
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>

                    </GridViewColumn>

                    <GridViewColumn DisplayMemberBinding= "{Binding Path=Name}" Width="355"   Header="Name" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox  Width="400" HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>



                    <GridViewColumn   Header="Probability" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Probability}" Width="100" HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    
                    
                    <GridViewColumn    Header="Return Year" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ReturnYear}"  Width="100" HorizontalAlignment="Stretch"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!--<GridViewColumnHeader>Last Name
                        <GridViewColumnHeader.ContextMenu>
                            <ContextMenu  MenuItem.Click="LastNameCM_Click"  
                                        Name="LastNameCM">
                                <MenuItem Header="Ascending" />
                                <MenuItem Header="Descending" />
                            </ContextMenu>
