<UserControl x:Class="Fda.Utilities.Rename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fda.Utilities"
        xmlns:OkClose="clr-namespace:Fda.Utilities"
        xmlns:ViewModel="clr-namespace:FdaViewModel.Utilities;assembly=FdaViewModel"
        mc:Ignorable="d"
         Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>

            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="txt_name" Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding Path=Name, ValidatesOnDataErrors=True}" />
        <Label Content="New Name:" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" />
        <OkClose:OKCloseControl Grid.Row="1" Grid.Column="1" />
    </Grid>
</UserControl>
