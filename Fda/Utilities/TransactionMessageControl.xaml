<UserControl x:Class="Fda.Utilities.TransactionMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fda.Utilities"
             xmlns:utils="clr-namespace:Fda.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <utils:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" TabStripPlacement="Top" Visibility="{Binding TransactionsMessagesVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <TabItem Header="Log" >
                <DataGrid AutoGenerateColumns="true" ItemsSource="{Binding TransactionRows, Mode=TwoWay}" ColumnWidth="*" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            </TabItem>
            <TabItem Header="Messages" >
                <DataGrid AutoGenerateColumns="true" ItemsSource="{Binding MessageRows}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
