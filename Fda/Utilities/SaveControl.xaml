    </UserControl.Resources>
    <Grid >
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width=""
        </Grid.ColumnDefinitions>-->
        <StackPanel Background="LightGray" HorizontalAlignment="Stretch" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  >
                <Button Name="btn_Undo" Style="{StaticResource AddButton}" Content="Undo" Width="50" Margin="5,5,0,5" Command="{Binding UndoCommand}" IsEnabled="{Binding UndoEnabled}" />
                <ComboBox  Width="18" ItemsSource="{Binding UndoRedoRows}" DisplayMemberPath="Name" Margin="0,5,5,5">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" >
                            <Setter Property="Popup.FlowDirection" Value="RightToLeft"/>
                            <Setter Property="Background" Value="LightGray" />
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                <Button Name="btn_Redo" Style="{StaticResource AddButton}" Content="Redo" Width="50" Margin="5" Command="{Binding RedoCommand}" IsEnabled="{Binding RedoEnabled}"/>
                <Button Name="btn_Save" Content="Save" Width="50" Margin="5" Command="{Binding SaveWhileEditingCommand}"  IsEnabled="{Binding Path=HasFatalError, Converter={StaticResource HasErrorConverter}, UpdateSourceTrigger=PropertyChanged}" Background="LightGreen"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
