<UserControl x:Class="Fda.Utilities.SaveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fda.Utilities"
             mc:Ignorable="d" 
             xmlns:cmds="clr-namespace:Fda.Commands"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <cmds:HasErrorConverter x:Key="HasErrorConverter"/>
    </UserControl.Resources>
    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width=""
        </Grid.ColumnDefinitions>-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btn_Undo" Content="Undo" Width="50" Margin="5" Command="{Binding UndoCommand}"/>
            <Button Name="btn_Redo" Content="Redo" Width="50" Margin="5" Command="{Binding RedoCommand}"/>
            <Button Name="btn_Save" Content="Save" Width="50" Margin="5" Command="{Binding SaveWhileEditing}"  IsEnabled="{Binding Path=HasFatalError, Converter={StaticResource HasErrorConverter}, UpdateSourceTrigger=PropertyChanged}" Background="LightGreen"/>
            
        </StackPanel>
    </Grid>
</UserControl>
