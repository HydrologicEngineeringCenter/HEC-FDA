<UserControl x:Class="VisualScratchSpace.RunButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualScratchSpace"
             xmlns:vm="clr-namespace:VisualScratchSpace.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:RunButtonVM}">
    <Grid>
        <TextBlock Text="{Binding Status}" 
                   FontSize="50"/>
        <Button Name ="btnToggle" 
                Width="100" 
                Height="50" 
                Content="{Binding BtnText}"
                Command="{Binding RunCommand}"/>
        
    </Grid>
</UserControl>
