<UserControl x:Class="FunctionsView.View.InterpolationComboboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunctionsView.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox Name="cmb_Interp" ItemsSource="{Binding InterpolationTypes}" SelectedItem="{Binding SelectedInterpolationType}" SelectionChanged="ComboBox_SelectionChanged"/>
    </Grid>
</UserControl>
