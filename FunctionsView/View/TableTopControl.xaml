<UserControl x:Class="FunctionsView.View.TableTopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunctionsView.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="62" />
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="103" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"    HorizontalAlignment="Stretch" BorderThickness="1,1,0,0" BorderBrush="CornflowerBlue" Margin="5,0,0,0">
            <!--<Label Content="X" HorizontalAlignment="Center" />-->
        </Border>
        <Border Grid.Column="1"   BorderBrush="CornflowerBlue" HorizontalAlignment="Stretch" BorderThickness="0,1,0,1">
            <Label Content="Y" HorizontalAlignment="Center" />
        </Border>
        <Border Grid.Column="2"   BorderBrush="CornflowerBlue" HorizontalAlignment="Stretch" BorderThickness="0,1,1,0">
            <!--<Label Content="Interpolator" HorizontalAlignment="Center"  Foreground="Black"/>-->
        </Border>

    </Grid>
</UserControl>
