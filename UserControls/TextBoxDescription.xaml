<UserControl x:Class="TextBoxDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox  Name="TxtDescription" Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=DescriptionWindow.Description}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Button Content="..." HorizontalAlignment="right" Margin="0,0,3,0" Name="Expand" VerticalAlignment="Center" Height="18" Width="18"/>

    </Grid>
</UserControl>
