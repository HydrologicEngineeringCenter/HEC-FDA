<UserControl
  x:Class="HEC.FDA.View.ImpactAreaScenario.Results.DamageWithUncertainty"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:HEC.FDA.View.ImpactAreaScenario.Results"
  mc:Ignorable="d"
  xmlns:oxy="http://oxyplot.org/wpf"
  xmlns:controls="clr-namespace:UserControls.UserControls;assembly=HEC.FDA.UserControls"
  xmlns:twp="clr-namespace:HEC.FDA.View.TableWithPlot"
  xmlns:utilVM="clr-namespace:HEC.FDA.ViewModel.Utilities;assembly=HEC.FDA.ViewModel"
  xmlns:results="clr-namespace:HEC.FDA.ViewModel.ImpactAreaScenario.Results;assembly=HEC.FDA.ViewModel"
  d:DesignHeight="450"
  d:DesignWidth="800"
  d:DataContext="{d:DesignInstance results:DamageWithUncertaintyVM}">
  <Grid
    x:Name="main_grd">
    <Grid.RowDefinitions>
      <RowDefinition
        Height="Auto" />
      <RowDefinition
        Height="500" />

    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="Auto" />
      <ColumnDefinition
        Width="*" />
    </Grid.ColumnDefinitions>

    <oxy:PlotView
      Margin="5"
      Grid.Column="1"
      Grid.Row="1"
      Model="{Binding MyPlot}" />

    <StackPanel
      Grid.Row="0"
      Orientation="Horizontal">
      <Label
        Content="Mean:" />
      <TextBlock
        Text="{Binding FormattedMean}"
        VerticalAlignment="Center" />
    </StackPanel>
    <twp:FdaDataGrid
      Grid.Row="1"
      Grid.Column="0"
      ItemsSource="{Binding Rows}"
      AutoGenerateColumns="True"
      AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      IsReadOnly="True"
      SelectionUnit="Cell"
      CanUserReorderColumns="False"
      CanUserSortColumns="false"
      WrapHeaders="True"
      Margin="5">
    </twp:FdaDataGrid>

  </Grid>
</UserControl>
