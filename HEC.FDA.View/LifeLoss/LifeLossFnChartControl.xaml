<UserControl x:Class="HEC.FDA.View.LifeLoss.LifeLossFnChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:lifeloss="clr-namespace:HEC.FDA.ViewModel.LifeLoss;assembly=HEC.FDA.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=lifeloss:LifeLossFnChartVM}">
    <Grid>
        <oxy:PlotView Model="{Binding PlotModel, Mode=OneTime}" />
        <CheckBox Content="Show Zones"
                  IsChecked="{Binding ShowZones}"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="60,10,0,0"
                  Background="White"
                  Padding="4,2" />
    </Grid>
</UserControl>
