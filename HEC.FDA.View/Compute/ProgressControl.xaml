<UserControl x:Class="HEC.FDA.View.Compute.ProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HEC.FDA.View.Compute"
             xmlns:rasObs="clr-namespace:Visual.Observables;assembly=Visual.Observables"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=rasObs:BatchJob}"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch">
  <Grid HorizontalAlignment="Stretch">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <ProgressBar Value="{Binding Progress}"
                 Height="20"
                 Margin="5"
                 HorizontalAlignment="Stretch" />
    <ListView x:Name="MessagesListView"
              Grid.Row="1"
              Height="200"
              ScrollViewer.VerticalScrollBarVisibility="Visible"
              ItemsSource="{Binding Messages}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding EvaluatedMessage}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>
