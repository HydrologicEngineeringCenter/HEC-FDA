<UserControl
  x:Class="HEC.FDA.View.Inventory.OccupancyTypes.OccupancyTypesImporterSQLite"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:HEC.FDA.View.Inventory.OccupancyTypes"
  xmlns:frameworkControls="clr-namespace:HEC.MVVMFramework.View.UserControls;assembly=HEC.MVVMFramework.View"
  xmlns:cmds="clr-namespace:HEC.FDA.View.Commands"
  xmlns:UserControls="clr-namespace:UserControls.UserControls;assembly=HEC.FDA.UserControls"
  xmlns:occtypes="clr-namespace:HEC.FDA.ViewModel.Inventory.OccupancyTypes;assembly=HEC.FDA.ViewModel"
  mc:Ignorable="d"
  d:DesignHeight="450"
  d:DesignWidth="800"
  d:DataContext="{d:DesignInstance Type=occtypes:OccupancyTypesImporterSQLiteVM}">

  <UserControl.Resources>

    <cmds:CloseCommand
      x:Key="close" />
    <cmds:SaveButtonEnabledConverter
      x:Key="SaveButtonMultiConverter" />
    <cmds:SaveButtonTooltipConverter
      x:Key="SaveButtonTooltipConverter" />
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition
        Height="auto" />
      <RowDefinition
        Height="auto" />
      <RowDefinition
        Height="auto" />
      <RowDefinition
        Height="auto" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="auto" />
      <ColumnDefinition
        Width="*" />
    </Grid.ColumnDefinitions>

    <!--Row 1-->
    <Label
      Grid.Row="0"
      Grid.Column="0"
      Margin="5"
      HorizontalAlignment="Right"
      Content="Base Name:" />
    <TextBox
      Grid.Row="0"
      Grid.Column="1"
      Margin="5"
      Text="{Binding Name, ValidatesOnDataErrors=True}" />

    <!--Row 2-->
    <Label
      Grid.Row="1"
      Grid.Column="0"
      Margin="5"
      HorizontalAlignment="Right"
      Content="Base Description:" />
    <UserControls:TextBoxDescription
      Grid.Row="1"
      Grid.Column="1"
      Margin="5"
      Text="{Binding Description}" />

    <!--Row 3-->
    <TextBlock
      Grid.Row="2"
      Grid.Column="0"
      Margin="0,0,5,0"
      HorizontalAlignment="Right"
      VerticalAlignment="Center"
      Text="SQLite File:" />
    <frameworkControls:TextBoxFileBrowserControl
      Grid.Row="2"
      Grid.Column="1"
      HorizontalAlignment="Stretch"
      FileDialogTitle="Select File"
      Filter="*.sqlite |*.sqlite"
      Path="{Binding Path}" />

    <Button
      Grid.Row="3"
      Margin="5"
      Content="Import"
      Command="{Binding ImportCommand}" />

  </Grid>
</UserControl>
