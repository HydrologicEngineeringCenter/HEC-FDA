<UserControl
  x:Class="HEC.FDA.View.AlternativeComparisonReport.Results.SummaryResults"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:HEC.FDA.View.AlternativeComparisonReport.Results"
  xmlns:twp="clr-namespace:HEC.FDA.View.TableWithPlot"
  xmlns:utilVM="clr-namespace:HEC.FDA.ViewModel.Utilities;assembly=HEC.FDA.ViewModel"
  mc:Ignorable="d"
  xmlns:utils="clr-namespace:HEC.FDA.View.Utilities"
  xmlns:results="clr-namespace:HEC.FDA.ViewModel.AlternativeComparisonReport.Results;assembly=HEC.FDA.ViewModel"
  d:DataContext="{d:DesignInstance Type=results:SummaryVM}"
  d:DesignHeight="450"
  d:DesignWidth="800">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
  </UserControl.Resources>
  <Grid>
    <ScrollViewer>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="Auto" />
          <RowDefinition
            Height="*" />
        </Grid.RowDefinitions>



        <!--Agg Base Year EAD-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="0"
          Width="auto"
          HorizontalAlignment="Left"
          Visibility="{Binding HasDamageResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding AggBaseYearLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding AggBaseEADSummaryRows}"
              AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto" />
          </StackPanel>
        </Border>

        <!--Base Year AALL-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="1"
          HorizontalAlignment="Left"
          Visibility="{Binding HasLifeLossResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding AggBaseYearAALLLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding AggBaseAALLSummaryRows}"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto"
              CustomNumberFormat="N4" />
          </StackPanel>
        </Border>

        <!--Future Year EAD-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="2"
          HorizontalAlignment="Left"
          Visibility="{Binding HasDamageResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding AggFutureYearLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding AggFutureEADSummaryRows}"
              AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto" />
          </StackPanel>
        </Border>

        <!--Future Year AALL-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="3"
          HorizontalAlignment="Left"
          Visibility="{Binding HasLifeLossResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding AggFutureYearAALLLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding AggFutureAALLSummaryRows}"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto"
              CustomNumberFormat="N4"/>
          </StackPanel>
        </Border>

        <!--Period of Analysis Eqad-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="4"
          HorizontalAlignment="Left"
          Visibility="{Binding HasDamageResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding AggEqadLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding AggEqadSummaryRows}"
              AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto" />
          </StackPanel>
        </Border>

        <!--Base Year EAD-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="5"
          Width="auto"
          HorizontalAlignment="Left"
          Visibility="{Binding HasDamageResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding BaseYearLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding BaseEADSummaryRows}"
              AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto" />
          </StackPanel>
        </Border>

        <!--Future Year EAD-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="6"
          HorizontalAlignment="Left"
          Visibility="{Binding HasDamageResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding FutureYearLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding FutureEADSummaryRows}"
              AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto" />
          </StackPanel>
        </Border>

        <!--Period of Analysis EqAD-->
        <Border
          BorderBrush="Gray"
          BorderThickness="1"
          Margin="5"
          Grid.Row="7"
          HorizontalAlignment="Left"
          Visibility="{Binding HasDamageResults, Converter={StaticResource BoolToVisConverter}}">
          <StackPanel>
            <TextBlock
              Text="{Binding EqadLabel}"
              HorizontalAlignment="Center"
              Margin="5" />

            <twp:FdaDataGrid
              ItemsSource="{Binding EqadSummaryRows}"
              AutoGeneratingColumn="FdaDataGrid_AutoGeneratingColumn"
              AutoGenerateColumns="True"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              IsReadOnly="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="False"
              CanUserSortColumns="false"
              Margin="5"
              SelectionUnit="Cell"
              Width="auto" />
          </StackPanel>
        </Border>

        <!--Bottom Bar-->
        <utils:OKCloseControl
          Grid.Row="8"
          VerticalAlignment="Bottom"
          HorizontalAlignment="Right"
          Margin="5" />
      </Grid>
    </ScrollViewer>
  </Grid>
</UserControl>
