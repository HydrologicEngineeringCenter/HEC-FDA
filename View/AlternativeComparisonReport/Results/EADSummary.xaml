    <DataGrid Name="dataGrid1" ItemsSource="{Binding Rows}" AutoGenerateColumns="False" HorizontalAlignment="Left"
                  VerticalAlignment="Top"  IsReadOnly="True" CanUserResizeColumns="False" CanUserReorderColumns="False"
                  CanUserSortColumns="false" Margin="5">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding WithoutProjAlternative}" Width="110">
                <DataGridTextColumn.Header>
                    <TextBlock Text="Without-Project Alternative" TextWrapping="Wrap" />
                </DataGridTextColumn.Header>
            </DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding WithoutProjEAD}" Width="110">
                <DataGridTextColumn.Header>
                    <TextBlock Text="Without-Project EAD Damage" TextWrapping="Wrap" />
                </DataGridTextColumn.Header>
            </DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding WithProjAlternative}" Width="110">
                <DataGridTextColumn.Header>
                    <TextBlock Text="With-Project Alternative" TextWrapping="Wrap" />
                </DataGridTextColumn.Header>
            </DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding WithProjEAD}" Width="110">
                <DataGridTextColumn.Header>
                    <TextBlock Text="With-Project EAD Damage" TextWrapping="Wrap" />
                </DataGridTextColumn.Header>
            </DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding EADDamageReduced}" Width="110">
                <DataGridTextColumn.Header>
                    <TextBlock Text="EAD Reduced" TextWrapping="Wrap" />
                </DataGridTextColumn.Header>
            </DataGridTextColumn>
            
            <DataGridTemplateColumn>
                <DataGridTemplateColumn.HeaderTemplate >
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Probability EAD reduced exceeds indicated values" TextWrapping="Wrap" Tag="FirstName" HorizontalAlignment="Center"  />
                            <TextBlock  Grid.Row="1" Grid.Column="0" Text="0.75" Tag="LastName" HorizontalAlignment="Center" />
                            <TextBlock  Grid.Row="1" Grid.Column="1" Text="0.5" Tag="LastName"  HorizontalAlignment="Center"/>
                            <TextBlock  Grid.Row="1" Grid.Column="2" Text="0.25" Tag="LastName"  HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </DataGridTemplateColumn.HeaderTemplate>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Point75}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding Point5}" Grid.Row="1" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding Point25}" Grid.Row="1" HorizontalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>


</UserControl>
