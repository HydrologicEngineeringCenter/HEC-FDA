<UserControl x:Class="View.Inventory.OccupancyTypes.SaveAllGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Inventory.OccupancyTypes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="10,0,0,0">
            <Label Grid.Row="0" Content="{Binding GroupName}" Margin="15,0,0,0" />
        </Border>
        <ListBox x:Name="lst_box" Grid.Row="1" BorderThickness="0" ItemsSource="{Binding SuccessfulList}" Margin="40,0,0,0" />
    </Grid>
</UserControl>
