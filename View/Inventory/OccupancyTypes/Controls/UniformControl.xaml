<UserControl x:Class="View.Inventory.OccupancyTypes.Controls.UniformControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Inventory.OccupancyTypes.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Min:"/>
            <TextBox Width="60" Height="22" Text="{Binding Min, Mode=TwoWay}" TextAlignment="Center"/>
            <Label Content="{Binding LabelString}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Max:" />
            <TextBox x:Name="txt_StandDeviation" Text="{Binding Max, Mode=TwoWay}" Width="60" Height="22" TextAlignment="Center"/>
            <Label Content="{Binding LabelString}"/>

        </StackPanel>

    </Grid>
</UserControl>
