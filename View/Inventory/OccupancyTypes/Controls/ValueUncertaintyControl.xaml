            <RadioButton x:Name="rad_DeviationFromMean" Content="Deviation from Mean:" IsChecked="{Binding Path=ValueUncertaintyType, Mode=TwoWay, Converter={StaticResource enumBooleanConverter}, ConverterParameter=DeviationFromMean}" />
            <RadioButton x:Name="rad_ActualDistribution" Content="Actual Distribution:" IsChecked="{Binding Path=ValueUncertaintyType, Mode=TwoWay, Converter={StaticResource enumBooleanConverter}, ConverterParameter=Actual}"/>
