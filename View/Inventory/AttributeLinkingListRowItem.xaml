<UserControl x:Class="Fda.Inventory.AttributeLinkingListRowItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fda.Inventory"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Name="txt_OldOccType" Grid.Column="0" />
        <GridSplitter Grid.Row="1" Width="3" />
        <ComboBox Name="cmb_NewOccType" Grid.Column="2" ItemsSource="{Binding SelectedListOfOccTypeStrings}" SelectionChanged="cmb_NewOccType_SelectionChanged" />
    </Grid>
</UserControl>
