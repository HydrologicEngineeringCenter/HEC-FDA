<UserControl x:Class="View.Utilities.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Utilities"
        xmlns:ViewModel="clr-namespace:ViewModel.Utilities;assembly=ViewModel"
        xmlns:Utilities="clr-namespace:View.Utilities"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="5" IsReadOnly="True" Text="{Binding Path=Message}" MinWidth="290"/>
        <Utilities:OKCloseControl Grid.Row="1"/>
    </Grid>
    
</UserControl>
