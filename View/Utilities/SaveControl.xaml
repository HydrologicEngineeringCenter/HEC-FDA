    </UserControl.Resources>
    <Grid >
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width=""
        </Grid.ColumnDefinitions>-->
        <StackPanel Background="LightGray" HorizontalAlignment="Stretch" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"  >
                <RepeatButton Name="btn_Undo" Style="{StaticResource UndoButton}" Width="40" Margin="5,5,0,5" Delay="400"  IsEnabled="{Binding ActionManager.SaveUndoRedoHelper.UndoEnabled}" Click="btn_Undo_Click" PreviewMouseLeftButtonDown="btn_Undo_MouseDown" PreviewMouseLeftButtonUp="btn_Undo_PreviewMouseUp"  MouseRightButtonUp="btn_Undo_MouseRightButtonUp" >
                </RepeatButton>
                <ComboBox Name="cmb_UndoDropDown" Width="0" ItemsSource="{Binding ActionManager.SaveUndoRedoHelper.UndoRows}" DisplayMemberPath="Name" Margin="0,5,5,5" SelectedIndex="{Binding UndoRowsSelectedIndex}">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" >
                            <Setter Property="Popup.FlowDirection" Value="RightToLeft"/>
                            <Setter Property="Background" Value="LightGray" />
                        </Style>
                    </ComboBox.Style>
                </ComboBox>



                <ComboBox Name="cmb_RedoDropDown" Width="0" ItemsSource="{Binding ActionManager.SaveUndoRedoHelper.RedoRows}" DisplayMemberPath="Name" Margin="0,5,5,5" SelectedIndex="{Binding RedoRowsSelectedIndex}">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" >
                            <Setter Property="Popup.FlowDirection" Value="LeftToRight"/>
                            <Setter Property="Background" Value="LightGray" />
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                <RepeatButton Name="btn_Redo" Style="{StaticResource RedoButton}" Width="40" Margin="5" Delay="400"  IsEnabled="{Binding ActionManager.SaveUndoRedoHelper.RedoEnabled}" Click="btn_Redo_Click" PreviewMouseLeftButtonDown="btn_Redo_PreviewMouseDown" PreviewMouseLeftButtonUp="btn_Redo_PreviewMouseUp" MouseRightButtonUp="btn_Redo_MouseRightButtonUp" >
                </RepeatButton>

                <Button Name="btn_Save" Style="{StaticResource SaveButton}" BorderThickness="0" Width="50" Margin="5"   IsEnabled="{Binding Path=HasFatalError, Converter={StaticResource HasErrorConverter}, UpdateSourceTrigger=PropertyChanged}" Click="btn_Save_Click" >
                    <!--<Image Name="img_saveEnabled"  Width="18" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Source="pack://application:,,,/Fda;component/Resources/save_enabled.png"/>-->
                </Button>
                <Label Name="lbl_Saving" Content="{Binding SavingText}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
