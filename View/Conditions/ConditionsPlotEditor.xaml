<UserControl x:Class="View.Conditions.ConditionsPlotEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Conditions"
             xmlns:utils="clr-namespace:View.Utilities"
             x:Name="ConditionsPlotEditorWindow"
             xmlns:plot="clr-namespace:View.Plots"
             xmlns:Cac="clr-namespace:Consequences_Assist.Controls;assembly=Consequences_Assist"
             MinWidth="550"
             MinHeight="550"
